<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="svtitlecolor" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="svtextcolor" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#4C5364</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="finalsc" parent="ShowcaseView.Light">
        <item name="sv_titleTextAppearance">@style/svtitlecolor</item>
        <item name="sv_detailTextAppearance">@style/svtextcolor</item>
    </style>

</resources>
