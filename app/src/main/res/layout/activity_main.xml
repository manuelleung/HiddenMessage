<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hiddenmessageteam.Firstonly"
    android:id="@+id/n"
   android:background="@drawable/theback">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:hint="  Enter your email"
        android:textSize="16dp"
        android:background="@drawable/back"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:hint=" Enter your password"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="@drawable/back"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Sign In"
        android:id="@+id/signinbutton"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:textColor="#56ae0a"
        android:textSize="16dp"
        android:background="@drawable/back"
        android:alpha=".3"
        android:onClick="buttonclick" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="------------------------------ Or ------------------------------"
        android:id="@+id/orline"
        android:textSize="20dp"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:textColor="#77c9ced2"
        android:layout_below="@+id/signinbutton" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign in with Gmail"
        android:id="@+id/gmailbutton"
        android:layout_below="@+id/orline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#dd4b39"
        android:textColor="#ffffff"
        android:onClick="buttonclick" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign in with Facebook"
        android:id="@+id/facebookbutton"
        android:layout_below="@+id/gmailbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:background="#3b5998"
        android:onClick="buttonclick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:id="@+id/forgot"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/signinbutton"
        android:layout_centerHorizontal="true"
        android:textColor="#BF4040"
        android:onClick="buttonclick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup"

        android:singleLine="false"
        android:text="Need an account? Sign Up"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/skip"
        android:background="@drawable/backthree"
        android:allowUndo="false"
        android:onClick="buttonclick"
        android:textColor="#f82020" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Skip Sign In"
        android:id="@+id/skip"

        android:layout_alignTop="@+id/signup"
        android:singleLine="false"
        android:background="@drawable/backthree"
        android:onClick="buttonclick"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:textColor="#140000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/cooltext14"/>


</RelativeLayout>
